<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Página Principal - Lo Mejor de K-Pop</title>
        <link rel="stylesheet" href="../styles/estilos.css" />
    </head>
    <body>
        <Header />

        <section>
            <table>
                <tr>
                    <td>
                        <button>Diagnosticar</button>
                        <button>Chatear con WARA</button>
                    </td>
                    <td>
                        <form>
                            <div class="elem-group">
                                <label for="message">Escríbenos</label>
                                <textarea
                                    id="message"
                                    name="visitor_message"
                                    placeholder="Escribe tu mensaje aquí."
                                    required></textarea>
                            </div>
                            <button type="submit">Enviar mensaje</button>
                        </form>
                    </td>
                    <td>
                        <img
                            src="imagenes/img_1_kpop.jpeg"
                            width="200"
                            height="100"
                            alt="Imagen de K-Pop"
                        />
                    </td>
                </tr>
            </table>
        </section>
        <center><h2>Otros Servicios</h2></center>
        <section class="servicios">
            <div class="servicio-item">
                <img
                    src="imagenes/img_2_wara.jpeg"
                    width="200"
                    height="150"
                    alt="Chatbot WARA"
                />
                <h3>WARA</h3>
                <button onclick="location.href='/wara'">Iniciar</button>
            </div>
            <div class="servicio-item">
                <img
                    src="imagenes/img_3_bot.jpg"
                    width="200"
                    height="150"
                    alt="BOT2 Icon"
                />
                <h3>BOT2</h3>
                <button onclick="location.href='/bot2'">Iniciar</button>
            </div>
        </section>

        <section>
            <h2>Recursos y Enlaces Importantes</h2>

            <!-- Nueva caja con opciones agregadas: Biblioteca, Flash Cards, Banco de Preguntas -->
            <div class="recursos-opciones">
                <button onclick="location.href='#'">Biblioteca</button>
                <button onclick="location.href='#'">Flash Cards</button>
                <button onclick="location.href='#'">Banco de Preguntas</button>
            </div>

            <table>
                <tr>
                    <td>
                        <form>
                            <div class="elem-group">
                                <label for="solicitud">Solicitud</label>
                                <textarea
                                    id="solicitud"
                                    name="visitor_message"
                                    placeholder="Escribe tu mensaje aquí."
                                    required></textarea>
                            </div>
                            <button type="submit">Enviar mensaje</button>
                        </form>
                    </td>
                    <td>
                        <img
                            src="imagenes/img_4_postal.png"
                            width="200"
                            height="200"
                            alt="Postal"
                        />
                    </td>
                </tr>
            </table>
        </section>

        <section>
            <h2>Sección Flash Cards</h2>
            <form>
                <div class="elem-group">
                    <textarea
                        id="flashcards"
                        name="visitor_message"
                        placeholder="Escribe tu mensaje aquí."
                        required></textarea>
                </div>
                <button type="submit">Enviar mensaje</button>
            </form>

            <h2>Sección Preguntas</h2>
            <form>
                <div class="elem-group">
                    <textarea
                        id="preguntas"
                        name="visitor_message"
                        placeholder="Escribe tu mensaje aquí."
                        required></textarea>
                </div>
                <button type="submit">Enviar mensaje</button>
            </form>

            <button>Diagnostícate</button>
        </section>

        <Footer />
    </body>
</html>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #001f3f; /* Azul noche */
        color: #f4f4f4;
        margin: 0;
        padding: 0;
        text-align: center;
    }

    h1 {
        margin: 0;
        font-size: 2.5rem;
    }
    h2 {
        margin-top: 40px;
        font-size: 2rem;
    }
    table {
        margin: 20px auto;
        border-collapse: collapse;
        width: 80%;
    }
    td {
        padding: 20px;
    }
    button {
        padding: 10px 20px;
        background-color: #39cccc; /* Color atractivo */
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
    }
    button:hover {
        background-color: #3d9970;
    }
    .elem-group textarea {
        width: 100%;
        height: 100px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 1rem;
    }
    .servicios {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }
    .servicio-item {
        background-color: #2e86c1;
        padding: 20px;
        border-radius: 10px;
        margin: 10px;
        width: 250px;
    }
    .servicio-item img {
        border-radius: 10px;
        margin-bottom: 10px;
    }
    .recursos-opciones {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .recursos-opciones button {
        margin: 0 10px;
        width: 150px;
    }
</style>
